<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="EditTextStyle" parent="android:Theme.Holo">

    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="ButtonStyle">
        <item name="android:textSize">100px</item>
        <item name ="android:fontFamily">"sans-serif-medium"</item>
    </style>
    
    <style name="MenuButtons">
        <item name="android:height">40dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">right</item>

        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/roundedbutton</item>

        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="FirstButton" parent="MenuButtons">
        <item name="android:width">250dp</item>
    </style>

    <style name="SecondButton" parent="MenuButtons">
        <item name="android:width">200dp</item>
    </style>

    <style name="ThirdButton" parent="MenuButtons">
        <item name="android:width">150dp</item>
    </style>

    <style name="FourthButton" parent="MenuButtons">
        <item name="android:width">100dp</item>
    </style>


    <style name="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="backButton">
        <item name="android:background">@null</item>
        <item name="android:maxWidth">50dp</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/backarrow</item>
    </style>

</resources>
