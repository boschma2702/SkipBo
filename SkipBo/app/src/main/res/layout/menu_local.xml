<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/bg_main_menu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Campaign"
        android:id="@+id/localCampaign"
        android:onClick="toCampaign"
        style="@style/FirstButton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Game"
        android:id="@+id/localQuick"
        android:onClick="toLocalStartGame"
        style="@style/SecondButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="toMainMenu"
        style="@style/ThirdButton"
        android:id="@+id/localBack" />



</LinearLayout>